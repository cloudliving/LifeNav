.book-detail-msg
	font-size 18px
	color #666
	text-align center
	line-height 120px

.book-detail-panel
	display flex
	align-items center
	padding 15px 15px 15px .6rem
	border-bottom 1px solid #eee

	& &-thumb
		width 2rem
		border-radius 4px
		border 1px solid #eee

	& &-info
		display flex
		flex 1
		margin-left 15px
		justify-content center

	& &-title
		font-size 18px
		color #000

	& &-author
	& &-count
	& &-time
		font-size 14px
		color #666
		margin-top 3px

.book-detail-intro
	padding 15px
	color #333
	line-height 1.6
	text-align justify
	border-bottom 1px solid #eee

.book-detail-chapters
	& &-title
		margin-bottom 10px
		line-height 45px
		text-align center
		color #999
		border-bottom 1px solid #eee
	
	& &-list
		padding 10px
		border-bottom 1px solid #eee

.book-detail-ctn
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	background #fefefe
	color #333
	overflow-y scroll
	line-height 1.8

	& &-header
		line-height 50px
		text-align center
		color #A17012
		border-bottom 1px solid #eee
		position relative

	& &-ctn
		padding 15px
		font-size 15px

	& &-back
		position absolute
		width 16px
		left 15px
		top 50%
		margin-top -8px
	
	& &-btns
		margin 20px 0
		text-align center
		
		button
			-webkit-appearance none
			margin 0 5px
			border none
			overflow visible
			font inherit
			color #666
			text-transform none
			display inline-block
			padding 0 12px
			background #f7f7f7
			vertical-align middle
			line-height 28px
			min-height 30px
			text-decoration none
			text-align center
			border 1px solid rgba(0,0,0,.2)
			border-bottom-color rgba(0,0,0,.3)
			background-origin border-box
			background-image linear-gradient(to bottom,#fff,#eee)
			border-radius 4px
			text-shadow 0 1px 0 #fff
			outline none

	p
		margin-top 15px
	