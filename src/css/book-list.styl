.book-list
	& &-item
		padding 15px
		display flex
		border-bottom 1px solid #eee
	& &-thumb
		width 2rem
		border-radius 4px
		border 1px solid #ddd
	& &-info
		margin-left 15px
		flex 1
		line-height 1.8
	& &-title
		font-size 18px 
		color #000
	& &-author
		font-size 12px
		color #999
	& &-intro
		font-size 14px
		margin 10px 0
		line-height 1.6
	& &-count
		color #999

.book-list-notify
	font-size 18px
	line-height 100px
	color #666
	text-align center

.book-list-pages
	display flex
	margin 15px 0
	justify-content center
	align-items center

	& &-btn
		-webkit-appearance none
		margin 0 5px
		border none
		overflow visible
		font inherit
		color #666
		text-transform none
		display inline-block
		padding 0 12px
		background #f7f7f7
		vertical-align middle
		line-height 28px
		min-height 30px
		text-decoration none
		text-align center
		border 1px solid rgba(0,0,0,.2)
		border-bottom-color rgba(0,0,0,.3)
		background-origin border-box
		background-image linear-gradient(to bottom,#fff,#eee)
		border-radius 4px
		text-shadow 0 1px 0 #fff
		outline none
		
		&:active,
		&[disabled]
			background-color #f5f5f5
			color #666
			border-color rgba(0,0,0,.2)
			border-top-color rgba(0,0,0,.3)
			background-image none
			box-shadow inset 0 2px 4px rgba(0,0,0,.1)


	& &-count
		color #999