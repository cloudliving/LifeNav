headerImage()
	display block
	width 100%
	margin-bottom .2rem

grid()
	display flex
	flex-wrap wrap
	border 1px solid #eee
	border-width 1px 0
	background #fff
	&>li
		width 33.33%
		padding .35rem 0
		border 1px solid #eee
		border-width 0 1px 1px 0
		&:nth-of-type(n+4)
			border-bottom-width 0
		&:nth-of-type(3n)
			border-right-width 0

btn()
	display flex
	justify-content center
	>a
		width 4.5rem
		height .66rem
		background #ff624e
		color #fff
		border-radius 4px
		text-align center
		line-height .66rem
		font-size 14px

body
	background #f0eff5
	
.care
.office
	&-header
		headerImage()
		
	&-list
		grid()
		font-size 14px
		>li
			text-align center
		.icon
			width .5rem

	&-oneTouchCall
		btn()
		margin-top .9rem

	&-wrap
		text-align center
		margin-top .35rem

	&-msg
		font-size 16px
		margin-bottom .1rem
		font-weight normal

.care-tags-item
	display inline-block
	position relative
	padding 0 .15rem 0 .25rem
	list-style disc
	color #737a87
	font-size 13px
	
	&:after
		content ''
		position absolute
		width 4px
		height 4px
		background #737a87
		left 0
		top 50%
		margin-top -2px
		border-radius 50%