body
	background #EEF3FA
	
.life-pack
	&-position
		line-height 45px
		background #fff
		text-align center
		border-bottom 1px solid #dedede

	&-radius
		color #2093CE
		text-align center
		font-size 14px
		line-height 2

	&-list
		padding 0 10px

	&-item
		background #fff
		border-radius 4px
		border 1px solid #dedede
		padding 10px
		color #999
		font-size 12px
		margin-bottom 10px
		
		.row
			display flex
			
		.name
		.site
			margin-right auto
			padding-right 20px

		.name
			margin-bottom 15px
			font-size 14px
			color #333
			
		.view
			display block
			padding 4px 12px
			border-radius 4px
			border 1px solid #d5d5d5
			color #fff
			border-color rgba(0,0,0,0.2)
			background-image linear-gradient(#00b4f5, #008dc5)

			&:active
				background #008abf