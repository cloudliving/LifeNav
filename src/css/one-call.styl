.call
	&-bg
		display block
		margin-bottom .6rem
		width 100%
	&-wrap
		text-align center
	&-title
		font-size 32px
		color #3b495e
		margin-bottom .35rem
	&-tags-item
		display inline-block
		position relative
		padding 0 .15rem 0 .25rem
		list-style disc
		color #737a87
		font-size 13px
		
		&:after
			content ''
			position absolute
			width 4px
			height 4px
			background #737a87
			left 0
			top 50%
			margin-top -2px
			border-radius 50%
	&-btn
		display inline-block
		width 5.3rem
		height .96rem
		margin-top .7rem
		line-height .96rem
		color #fff
		border-radius 6px
		background #ff614e
