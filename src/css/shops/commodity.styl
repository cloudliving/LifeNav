@import '../../mixin/shops'

body
	background #f5f5f5
	padding-bottom 60px

.ui-slider
	height 3rem

.box
	padding .3rem .25rem
	background #fff
	margin-bottom 15px
	
	&:last-child
		margin-bottom 0

.bb
	bb()

.commodity-title
	textOverflow(2)

	height 58px
	font-size 16px
	line-height 1.8
	color #000
		
.commodity-info
	shopInfo()

.commodity-attr
	font-size 14px
	
	&-item
		display flex
		margin-bottom 10px
		
		&:last-child
			border-bottom 0
	&-name
		color #000
		width 60px
		
	&-val
		color #808080
		flex 1

.commodity-intro
	&-title
		margin-bottom 20px

	&-ctn
		p
			font-size 14px
			color #8d8d8d
			text-indent 2em	

.commodity-buy
	display flex
	position fixed
	left 0
	bottom 0
	width 100%
	height 60px
	padding 0 .25rem
	background #fff
	border-top 1px solid #eee
	align-items center
	font-size 14px
	color #7f7f7f

	&-icon
		width .3rem
		margin-right 10px
		
	&-phone
		color #fe9101

	&-btn
		display inline-block
		height .68rem
		padding 0 .36rem
		margin-left auto
		line-height .68rem
		background #ee6a34
		color #fff
		border-radius 2em
		&:hover
			color #fff