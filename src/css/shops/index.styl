@import '../../mixin/shops'

body
	background #f5f5f5
	
.bgfff
	background #fff
	
.ui-slider
	height 3rem
	
.nav
	display flex
	width 4.3rem
	margin 0 auto
	padding .4rem 0
	font-size 14px
	
	&-item
		text-align center
		
		img
			width .75rem
			height .75rem
			display inline-block
			margin-bottom .25rem
			
		&:first-child
			margin-right auto
			
.recommend
	margin-top .3rem
	padding .25rem
	background #fff
	
	&-title
		display flex
		align-items center
		font-size 14px
		
	&-title-icon
		width .26rem
		height .26rem
		margin-right 5px
		
	&-more
		margin-left auto
		color #666
		&:hover
			color #666
			
	&-more-icon
		width .12rem
		height .2rem
		margin-left 5px

shopList()
