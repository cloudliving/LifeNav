@import '../../mixin/shops'

body
	background #f5f5f5
.ui-tab-content
	margin-top 10px

// 订单列表
.orderList-item
	background #fff
	margin-bottom 10px
	&:last-child
		margin-bottom 0

	// head
	&-hd
		display flex
		position relative
		align-items center
		border-bottom 1px solid #e5e5e5
		padding .2rem .25rem
		font-size 14px

	&-logo
		margin-right 5px
		width .35rem

	&-num
		position absolute
		left 50%
		transform translateX(-50%)
		text-align center
		font-size 12px
		color #a3a3a3

	&-del
		margin-left auto
	&-delImg
		width .33rem
			
	// body
	&-bd
		display flex
		padding .2rem .25rem
		flex-direction column
	&-thumb
		width .8rem
		height .96rem
		border-radius 6px
		margin-right .16rem

	&-name
		textOverflow(2)

		font-size 14px
		color #000
		line-height 1.8
		height 51px

	&-count
		margin-top .2rem
		padding-top .2rem
		border-top 1px solid #e5e5e5
		font-size 12px
		color #000
		em
			color #f16932