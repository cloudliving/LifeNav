@import '../../mixin/shops'

body
	background #f5f5f5
	padding-bottom 60px
.aic
	align-items center
.mb10
	margin-bottom 10px
	
// 目的地
.destination
	padding 10px 0 10px .25rem
	font-size 12px
	color #23ad39
	background #e6e6e6

// 购物车列表
.list
	padding 0 .25rem
	background #fff

	&-item
		display flex
		padding .3rem 0
		border-bottom 1px solid #e5e5e5
		&:last-child
			border 0

		&-thumb
			width 1.75rem

		&-main
			flex 1
			margin-left .15rem

		&-title
			textOverflow(2)

			margin-bottom 5px
			height 45px
			font-size 14px
			line-height 1.6
			color #000

		&-spec
			color #747474
			font-size 12px

		&-ft
			display flex
			align-items baseline
			color #ff3e00
			font-size 12px

		&-price
			font-size 18px

		&-del
			color inherit

// 去结算
.goBuy
	display flex
	position fixed
	left 0
	bottom 0
	width 100%
	height 60px
	padding 0 .25rem
	background #fff
	border-top 1px solid #eee
	align-items center
	font-size 14px
	color #7f7f7f

	span
		color #000
		margin-left 5px
		
	em
		color #ec6832
		font-size 18px
		margin-right 2px

	a
		display inline-block
		height 0.68rem
		padding 0 0.36rem
		margin-left auto
		line-height 0.68rem
		background #ee6a34
		color #fff
		border-radius 2em
		

// 计数器
.m-counter
	display flex
	height .56rem
	width 1.85rem
	line-height .56rem
	font-size 14px
	border-radius 3px
	overflow hidden

	>*
		flex 1

	&-minus
		background #e3e3e6
		color #fff

	&-add
		background #0faffe
		color #fff

	&-val
		border 1px solid #e3e3e6
		border-width 1px 0
		width .62rem
		text-align center
		-webkit-appearance: none
		border-radius 0
		color #676767
		background #fff
