html
body
	height 100%

body
	color #fff
	background #728893

#app
	height 100%
	overflow hidden
	display flex
	flex-direction column


.info
	display flex
	flex 1
	align-items center
	justify-content center
	text-align center

	.city 
		font-size .7rem
	.details
		font-size .3rem
	.temp
		position relative
		font-size 1.8rem

		&:after
			position absolute
			content ''
			right -.1remrem
			top .6rem
			width .3rem
			height .3rem
			border-radius 50%
			border .07rem solid #fff
			box-sizing border-box

.today
	display flex
	padding 0 .35rem .1rem .35rem
	font-size .26rem
	border-bottom 1px solid #8599a4
	span:first-child
		margin-right auto
	
.weekList
	max-height 4rem
	overflow-y scroll
	line-height .8rem
	padding 0 .35rem
	
	li
		display flex
		position relative
		.date
			margin-right auto
		.icon
			position absolute
			left 50%
			top 50%
			transform translate(-50%, -50%)
			padding-top .3rem
			img
				width .45rem
