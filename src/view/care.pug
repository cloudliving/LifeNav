doctype html
html(lang='zh-CN')
	head
		meta(charset='UTF-8')
		meta(name='viewport', content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0')
		title 便民服务
		script(src="../lib/flexible.js")
		link(rel="stylesheet", href="../css/common.styl")
		link(rel="stylesheet", href="../css/careAndOffice.styl")
	body

		img.care-header(src="../images/care-bg.png")

		ul.care-list
			each item,index in ['维修', '配送', '保姆', '搬家', '家政', '教育', '养老', '旅游', '其他']
				li
					a(href="#")
						img.icon(src="../images/care"+(index+1)+'.png')
						p=item


		ul.care-tags
			li.care-tags-item 惠民价格
			li.care-tags-item 优质服务
			li.care-tags-item 流程简单
			li.care-tags-item 平台保障
